<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>controller.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controller.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateEmployee</servlet-name>
        <servlet-class>controller.CreateEmployee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Changepass</servlet-name>
        <servlet-class>controller.Changepass</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListEmployee</servlet-name>
        <servlet-class>controller.ListEmployee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContractDetail</servlet-name>
        <servlet-class>controller.ContractDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Profile</servlet-name>
        <servlet-class>controller.Profile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateEmployee</servlet-name>
        <servlet-class>controller.UpdateEmployee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateDepartment</servlet-name>
        <servlet-class>controller.CreateDepartment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListDepartment</servlet-name>
        <servlet-class>controller.ListDepartment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateDepartment</servlet-name>
        <servlet-class>controller.UpdateDepartment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateEmployee</servlet-name>
        <url-pattern>/create-employee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Changepass</servlet-name>
        <url-pattern>/change-password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListEmployee</servlet-name>
        <url-pattern>/list-employee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContractDetail</servlet-name>
        <url-pattern>/contract-detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateEmployee</servlet-name>
        <url-pattern>/update-employee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateDepartment</servlet-name>
        <url-pattern>/create-department</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListDepartment</servlet-name>
        <url-pattern>/list-department</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateDepartment</servlet-name>
        <url-pattern>/update-department</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30000
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error.jsp</location>
    </error-page>
</web-app>
